@using Hospital.ViewModels;
@model ContactViewModel
@{
    var HospitalData = new SelectList(ViewBag.hospitalData, "Id", "Name");
}


<div class="form-group">
    <label asp-for="Email" class="control-label"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Phone" class="control-label"></label>
    <input asp-for="Phone" class="form-control" />
    <span asp-validation-for="Phone" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.HospitalId" class="control-label"></label>
    <select asp-for="@Model.HospitalId" asp-items="HospitalData" class="form-controller">
        <option>-- Select Hospital --</option>
    </select>
    <span asp-validation-for="@Model.HospitalId" class="text-danger"></span>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
