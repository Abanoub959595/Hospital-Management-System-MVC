@using Hospital.ViewModels;
@model RoomViewModel
@{
    var HospitalData = new SelectList(ViewBag.hospitalData, "Id", "Name");
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="RoomNumber" class="control-label"></label>
    <input asp-for="RoomNumber" class="form-control" />
    <span asp-validation-for="RoomNumber" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Type" class="control-label"></label>
    <input asp-for="Type" class="form-control" />
    <span asp-validation-for="@Model.Type" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Status" class="control-label"></label>
    <input asp-for="@Model.Status" class="form-control" />
    <span asp-validation-for="Status" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="HospitalId" class="control-label"></label>
    <select asp-for="HospitalId" asp-items="HospitalData">
        <option>-- Select Hosptial --</option>
    </select>
    <span asp-validation-for="HospitalId" class="text-danger"></span>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}